.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ccc;
    font-family: "Microsoft YaHei";
    overflow-x: hidden;
}
.layout-top{
    width: 100%;
    margin-bottom: 30rpx;
}
.layout-bottom{
    width: 100%;
}
.screen {
    text-align: right;
    height:15%;
    width: 100%;
    line-height: 200rpx;
    padding: 16rpx 10rpx 0 0;
    font-weight: bold;
    font-size: 40px;
    box-sizing: border-box;
    border-top: 1px solid #bb5e00;
}
.btnGroup {
    display: flex;
    flex-direction: row;
    flex: 1;
    width: 100%;
    height: 5rem;
    background-color: #bb5e00;
}
.item {
    width:25%;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 1px;
    margin-right: 1px;
}
.item:active {
    background-color: #ff0000;
}
.zero{
    width: 25%;
}
.orange {
    color: #dfe54f;
    background: #6c6c6c;
    font-weight: bold;
}
.blue {
    color:#d9eef7;
    background-color: #984b4b;
}
.iconBtn{
    display: flex;
}
.icon{
   display: flex;
   align-items: center;
   width:100%;
   justify-content: center;
}